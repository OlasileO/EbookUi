@model IEnumerable<Ebook_Model.Publisher>


<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" asp-action="Create">Add more</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Publisher</h3>
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th>Publisher</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PublisherName</td>
                            <td>
                                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>