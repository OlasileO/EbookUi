@model Ebook_Model.Publisher
@{
    ViewData["Title"] = "Edit";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Upadate Publisher</h3>
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="danger"></div>
                <div class="form-group">
                    <label asp-for="PublisherName" class="control-lable"></label>
                    <input type="text" asp-for="PublisherName" class="form-control" />
                    <span class="text-danger" asp-validation-for="PublisherName"></span>
                </div>
                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark">Update</button>
                    <a asp-asp-controller="Author" asp-action="Index" class="btn btn-primary">List</a>
                </div>
            </form>
        </div>
    </div>
</div>


