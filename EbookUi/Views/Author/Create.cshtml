@model Ebook_Model.Author
@{
    ViewData["Title"] = "Create";
}

<div class="container pt-5">
    <div class="row">
        <div  class="col-md-6">
            <h3>Add Author</h3>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="danger"></div>
                <div class="form-group">
                    <label asp-for="AuthorName" class="control-lable"></label>
                    <input type="text" asp-for="AuthorName" class="form-control" />
                    <span class="text-danger" asp-validation-for="AuthorName"></span>
                </div>
                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark">Save</button>
                    <a asp-asp-controller="Author" asp-action="Index" class="btn btn-primary">List</a>
                </div>
            </form>
        </div>
    </div>
</div>

