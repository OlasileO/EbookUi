@model Ebook_Model.Model.BookViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="container pt-2">
    <div class="row">
        <div class="col-md-6 offset-3">
            <h3>Add Publisher</h3>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="danger"></div>
                <div class="form-group">
                    <label asp-for="BookName" class="control-lable"></label>
                    <input type="text" asp-for="BookName" class="form-control" />
                    <span class="text-danger" asp-validation-for="BookName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="price" class="control-lable"></label>
                    <input type="number" asp-for="price" class="form-control" />
                    <span class="text-danger" asp-validation-for="price"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Isbn" class="control-lable"></label>
                    <input type="text" asp-for="Isbn" class="form-control" />
                    <span class="text-danger" asp-validation-for="Isbn"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TotalPages" class="control-lable"></label>
                    <input type="number" asp-for="TotalPages" class="form-control" />
                    <span class="text-danger" asp-validation-for="TotalPages"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-lable"></label>
                    <input  asp-for="Image" class="form-control" />
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="GenreId" class="control-lable"></label>
                    <select asp-for="GenreId" class="form-control" asp-items="ViewBag.Genres"></select>
                    <span class="text-danger" asp-validation-for="GenreId"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="AuthorId" class="control-lable"></label>
                    <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.Authors"></select>
                    <span class="text-danger" asp-validation-for="AuthorId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PublisherId" class="control-lable"></label>
                    <select asp-for="PublisherId" class="form-control" asp-items="ViewBag.Publishers"></select>
                    <span class="text-danger" asp-validation-for="PublisherId"></span>
                </div>
                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark">Save</button>
                    <a asp-asp-controller="Book" asp-action="Index" class="btn btn-primary">List</a>
                </div>
            </form>
        </div>
    </div>
</div>

